generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Badge {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  handle    String  @unique
  email     String  @unique
  address   String  @unique
  avatar    Avatar?
  status    Status  @default(UNVERIFIED)
  otp       OTP?
}

enum Status {
  UNVERIFIED
  PENDING
  ISSUED
  REVOKED
}

type Avatar {
  filename  String
  url       String
}

type OTP {
  code      String
  expires   DateTime
}